<%= turbo_stream.replace dom_id(@award) do %>
  <%= render partial: "awards/award", locals: { 
    award: @award,
    points: @child.send(@award.points_method_for_periodicity)
  } %>
<% end %>
<%= turbo_stream.update "child-#{@child.id}-#{@award.points_method_for_periodicity}" do %>
  <%= @child.send(@award.points_method_for_periodicity) %>
<% end %>