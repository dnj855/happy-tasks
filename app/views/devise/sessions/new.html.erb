<div class="headers__container container">
  <%= link_to "/" do %>
    <span class="headers__back-arrow"><i class="fa-solid fa-chevron-left"></i></span>
  <% end %>
  <div class="headers__title-container">
    <h1>Se connecter</h1>
  </div>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form__group">
      <%= f.label :email, class: "form__label" %>
      <%= f.text_field :email,
                      class: "form__input #{resource.errors[:email].any? ? 'form__input--error' : ''}",
                      required: true,
                      autofocus: true,
                      autocomplete: "email",
                      placeholder: "Email" %>
      <% if resource.errors[:email].any? %>
        <p class="form__error text-sm text-color-error"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>

    <div class="form__group">
      <%= f.label :password, class: "form__label" %>
      <%= f.password_field :password,
                           class: "form__input #{resource.errors[:password].any? ? 'form__input--error' : ''}",
                           required: true,
                           autocomplete: "current-password",
                           placeholder: "Password" %>
      <% if resource.errors[:password].any? %>
        <p class="form__error text-sm text-color-error"><%= resource.errors[:password].first %></p>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi", class: "form__label" %>
      </div>
    <% end %>

    <div class="form__end">
      <%= f.submit "Se connecter", class: "form__button" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
