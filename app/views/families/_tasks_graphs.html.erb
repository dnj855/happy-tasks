<h1><%= Date.today.strftime("%B %Y") %></h3>
<%= content_tag :div, class: "tasks-graphs-container" do %>
  <% @children.each do |child| %>
    <div class="tasks-graph" data-controller="chart"
     data-chart-task-counts-value="<%= @task_counts[child.id].to_json %>">
      <h2><%= child.first_name %></h2>
      <h3><%=@task_counts[child.id].values.sum%>Tâches réalisées</h3>
      <canvas id="tasksGraph-<%= child.id %>" width="400" height="200"></canvas>
    </div>
  <% end %>
<% end %>
